!******************************************************************
!Terminal options

gnome-terminal*geometry: 103x25
gnomes-terminal*background: black
gnomes-terminal*foreground: green

xterm*VT100.geometry:103x25
xterm*background: gray10
xterm*foreground: green

xterm*font: -*-courier-medium-r-*-*-14-*-*-*-*-*-iso8859-*
!xterm*font: -*-courier-medium-r-*-*-24-*-*-*-*-*-iso8859-*
xterm*font1: -*-*-*-*-*-*-2-*-*-*-*-*-*-*
xterm*font2: -misc-fixed-*-r-normal-*-8-*-*-*-*-*-iso8859-*
xterm*font3: -b&h-lucidatypewriter-bold-*-*-*-12-*-*-*-*-*-*-*
xterm*font4: -*-screen-bold-r-normal-*-16-*-*-*-*-*-iso8859-*
xterm*font5: -*-lucidatypewriter-medium-*-*-*-18-*-*-*-*-*-*-*
xterm*font6: -*-lucidatypewriter-medium-*-*-*-20-*-*-*-*-*-*-*
xterm*font7: -dec-terminal-bold-r-normal-*-14-*-*-*-*-*-iso8859-*

xterm*pointerColor: orchid
xterm*pointerColorBackground: navy
xterm*cursorColor: orange
xterm*internalBorder: 3
xterm*loginShell: true
xterm*scrollBar: false
xterm*scrollKey: true
xterm*saveLines: 1000
xterm*multiClickTime: 250 

!****************************************************************** 
